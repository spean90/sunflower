
<div class="container">
    <h1 ><%=title%></h1>
    <hr />
    <div id="alert" class="alert alert-warning fade in" hidden="hidden">
        密码输入不一致！
        <a href="#" class="close" data-dismiss="alert">&times;</a>
    </div>
    <% if (error) { %>
    <div class="alert alert-warning">
        <%= error %>
        <a href="#" class="close" data-dismiss="alert">&times;</a>
    </div>
    <% } %>
    <form role="form" id="signform" action="/user/signup" method="post" class="form-horizontal" style="width: 70%">
        <div class="form-group">
            <label for="username" class="control-label col-sm-2">username:</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" required="true" id="username" name="username" placeholder="用户名">
            </div>
        </div>
        <div class="form-group">
            <label for="password" class="control-label col-sm-2">password:</label>
            <div class="col-sm-10">
                <input type="password" class="form-control" required="true" id="password" name="password" placeholder="密码">
            </div>
        </div>
        <div class="form-group">
            <label for="re_password" class="control-label col-sm-2">password:</label>
            <div class="col-sm-10">
                <input type="password" class="form-control" required="true" id="re_password" name="re_password" placeholder="确认密码">
            </div>
        </div>
        <div class="form-group">
            <label for="tel" class="control-label col-sm-2">telephone:</label>
            <div class="col-sm-10">
                <input type="tel" id="tel" required="true" class="form-control" name="tel" placeholder="电话">
            </div>
        </div>
        <div class="form-group">
            <label for="address" class="control-label col-sm-2">家庭地址:</label>
            <div class="col-sm-10">
                <input type="tel" id="address" required="true" class="form-control" name="address" placeholder="家庭地址">
            </div>
        </div>
        <div class="form-group">
            <label for="child_name" class="control-label col-sm-2">child_name:</label>
            <div class="col-sm-10">
                <input  id="child_name" required="true" class="form-control" name="child_name" placeholder="小孩姓名">
            </div>
        </div>
        <div class="form-group">
            <label for="child_age" class="control-label col-sm-2">child_age:</label>
            <div class="col-sm-10">
                <input type="number" id="child_age" required="true" class="form-control" name="child_age" placeholder="小孩年龄">
            </div>
        </div>
        <div class="form-group">
            <label for="child_class" class="control-label col-sm-2">child_class:</label>
            <div class="col-sm-10">
                <input type="text" id="child_class" required="true" class="form-control" name="child_class" placeholder="小孩班级">
            </div>
        </div>
        <div class="form-group">
            <label  class="control-label col-sm-2">sex</label>
            <div class="col-sm-10">
                <label class="radio-inline">
                    <input type="radio" name="child_sex" value="1" checked> male
                </label>
                <label class="radio-inline">
                    <input type="radio" name="child_sex" value="2"> female
                </label>
            </div>
        </div>
        <div align="center">
            <input type="button" onclick="signup.submit()" class="btn btn-primary btn-sm" value="submit">
            <input type="reset" class="btn btn-default btn-sm" value="reset">
        </div>
    </form>
</div>
<script src="/javascript/signup.js"></script>